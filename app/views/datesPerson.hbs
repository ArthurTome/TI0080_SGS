<div class="user_data_space">
    <h2> Exames Realizados</h2>
  <table class="tables_data">
    <thead>
    <tr>
        <th>ID</th>
        <th>Nome completo</th>
        <th>CPF</th>
        <th>Idade</th>
        <th>Data de Nascimento</th>
        <th>Endereço</th>
        <th>Profissão</th>
        <th>Deletar</th>
    </tr>
    </thead>
    <tbody>

      {{#each users}}

    <tr>
        <td>{{this.id}}</td>
        <td>{{this.data}}</td>
        <td>{{this.description_exam}}</td>
        <td>{{this.pacient_name}}</td>
        <td>{{this.doctor_name}}</td>
        <td>{{this.createdAt}}</td>
        <td>
          <a>
            <i class="fa fa-trash" style="font-size: 20px"></i> 
          </a>
        </td>
        
    </tr>

      {{/each }}

    </tbody>
    
  </table>
</div>
